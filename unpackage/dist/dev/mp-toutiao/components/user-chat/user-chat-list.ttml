<view class="user-chat-item"><block tt:if="{{item.gstime}}"><view class="user-chat-time u-f-ajc">{{item.gstime}}</view></block><view class="{{(('user-chat-list u-f')+' '+((item.isme)?'user-chat-me':''))}}"><block tt:if="{{!item.isme}}"><image src="{{item.userpic}}" mode="widthFix" lazy-load></image></block><view class="user-chat-list-body"><block tt:if="{{item.type=='text'}}"><text>{{item.data}}</text></block><block tt:if="{{item.type=='img'}}"><image src="{{item.data}}" mode="widthFix" lazy-load></image></block></view><block tt:if="{{item.isme}}"><image src="{{item.userpic}}" mode="widthFix" lazy-load></image></block></view></view>